<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing2"
    tools:context=".activity.GetDoneActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/getdon_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.4"
                android:textColor="@color/white"
                android:textSize="25dp"/>
            <View
            android:background="@color/white"
            android:layout_width="80dp"
            android:layout_height="2dp"/>
            <TextView
                android:id="@+id/getdon_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期一"
                android:textColor="@color/white"
                android:textSize="25dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/getdon_day"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="38dp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四号"/>
    </LinearLayout>
    <TextView
        android:id="@+id/getdon_workname"
        android:layout_marginTop="130dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginStart="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任务名"/>

    <ImageView
        android:id="@+id/trans_huojian"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginTop="215dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/huojian" />
    <Button
        android:id="@+id/Getdone_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/getdon1"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="打卡"/>
</RelativeLayout>