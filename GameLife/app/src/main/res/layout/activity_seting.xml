<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SettingActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/person_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorToolbar"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/workmore_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/back_white" />

            <TextView
                style="@style/font_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="任务菜单" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">
      <ftd.txf.com.gamelife.utils.IdentityImageView
          android:id="@+id/workmore_img"
          android:layout_marginStart="30dp"
          android:layout_width="70dp"
          android:layout_height="70dp"
          app:iciv_radiusscale="0.2">
      </ftd.txf.com.gamelife.utils.IdentityImageView>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:src="@drawable/vip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_mine_big"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:text="注册/登录"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:src="@drawable/upcloud"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/workmore_means"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/self_means"/>
        <TextView
            android:layout_gravity="center"
            style="@style/font_black"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="信息修改"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:src="@drawable/toright"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_height="1dp"
        android:background="@color/lightgray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginStart="15dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/notice"/>
            <TextView
                android:layout_gravity="center"
                style="@style/font_black"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日提醒"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/workmore_choosenaozhong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:checked="false"
                    android:textOff="开"
                    android:textOn="关" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_height="1dp"
            android:background="@color/lightgray"/>
        <LinearLayout
            android:id="@+id/workmore_choosetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginStart="25dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/tz_timeclick"/>
            <TextView
                android:layout_gravity="center"
                style="@style/font_black"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间设置"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/workmore_timetext"
                    android:textSize="15dp"
                    android:textColor="@color/grey"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:00"/>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
    android:id="@+id/workmore_choosecontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="25dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/content"/>
        <TextView
            android:layout_gravity="center"
            style="@style/font_black"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知内容"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/workmore_content"
                style="@style/font_small_gray"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好好学习不能放弃"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/music_colorful"/>
        <TextView
            android:layout_gravity="center"
            style="@style/font_black"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒闹铃"/>
        <TextView
            android:id="@+id/workmore_musictext"
            style="@style/font_small_gray"
            android:layout_marginStart="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="炫酷牛仔"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/workmore_nzup"
                android:background="@color/alpha0"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="25dp"
                android:layout_gravity="end"
                android:src="@drawable/down"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/workmore_musicshow"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_height="1dp"
            android:background="@color/lightgray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/workmore_musicshow1"
                android:layout_marginStart="25dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/music"/>
            <TextView
                android:layout_gravity="center"
                style="@style/font_black"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闹钟1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/workmore_music1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="25dp"
                    android:layout_gravity="end"
                    android:background="@color/alpha0"
                    android:src="@drawable/play_black"/>
            </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/workmore_musicshow2"
                android:layout_marginStart="25dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/music"/>
            <TextView
                android:layout_gravity="center"
                style="@style/font_black"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闹钟2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/workmore_music2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="25dp"
                    android:layout_gravity="end"
                    android:src="@drawable/play_black"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/workmore_musicshow3"
                android:layout_marginStart="25dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/music"/>
            <TextView
                android:layout_gravity="center"
                style="@style/font_black"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闹钟3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/workmore_music3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="25dp"
                    android:layout_gravity="end"
                    android:background="@color/alpha0"
                    android:src="@drawable/play_black"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_height="1dp"
        android:background="@color/lightgray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/xitong"/>
        <TextView
            android:layout_gravity="center"
            style="@style/font_black"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐藏系统任务"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/workmore_showxitong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:checked="false"
                android:textOff="开"
                android:textOn="关" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_height="1dp"
        android:background="@color/lightgray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/puch"/>
        <TextView
            android:layout_gravity="center"
            style="@style/font_black"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="挑战模式"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Switch
                android:id="@+id/workmore_Tiaozhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:checked="false"
                android:textOff="开"
                android:textOn="关" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_height="1dp"
        android:background="@color/lightgray"/>
    <LinearLayout
        android:id="@+id/workmore_quanxian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/quanxian"/>
        <TextView
            android:layout_gravity="center"
            style="@style/font_black"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="权限请求"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_height="1dp"
        android:background="@color/lightgray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginStart="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/question"/>
        <TextView
            android:layout_gravity="center"
            style="@style/font_black"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="如何使用"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_height="1dp"
        android:background="@color/lightgray"/>
</LinearLayout>