<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue_blade">
    <TextView
        android:id="@+id/timer_ways_mubiao"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="倒计时:锻炼"
        android:textSize="20dp"
        android:layout_gravity="center"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/timer_time"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="00:00:00"
        android:textSize="60dp"
        android:textStyle="bold"/>
    <TextView
        android:textColor="@color/nowhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H           M           S"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"/>
</LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/timer_gifimg"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/timer_fuwocheng"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/timer_naozhong"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="45dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/timer_control"
            android:src="@drawable/naozhong_64" />
        <ImageButton
            android:id="@+id/timer_control"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/start_64"/>
        <ImageView
            android:id="@+id/timer_stop"
            android:layout_marginStart="45dp"
            android:layout_toEndOf="@+id/timer_control"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/stop_64"/>
    </RelativeLayout>
</LinearLayout>