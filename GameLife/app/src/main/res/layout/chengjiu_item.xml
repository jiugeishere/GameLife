<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="4dp"
        android:elevation="1dp"
        android:layout_height="55dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/chengjiu_img"
                android:layout_marginStart="15dp"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/chengjiu_jiangno"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/chengjiu_name"
                    style="@style/font_mine_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万事开头难"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/chengjiu_limit"
                        style="@style/font_small_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"/>
                    <TextView
                        android:id="@+id/chengjiu_way"
                        style="@style/font_small_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="天"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/chengjiu_roundProgressBar"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chengjiu_isget"
                    style="@style/font_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="已获得"/>
                <TextView
                    android:id="@+id/chengjiu_createtime"
                    style="@style/font_small_gray"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="2020年4月3日"/>
            </LinearLayout>
            <ftd.txf.com.gamelife.utils.RoundProgressBar
                android:id="@+id/chengjiu_roundProgressBar"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:backColor="#ffffff"
                app:startAngle="90"
                app:roundColor="@color/alpha0"
                app:roundProgressColor="@color/colorToolbar"
                app:roundWidth="10dp"
                app:textColor="@color/gray"
                app:textSize="10dp" />

            </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>