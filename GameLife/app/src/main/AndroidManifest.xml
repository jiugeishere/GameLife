<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ftd.txf.com.gamelife">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/gamelife_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/gamelife_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity"></activity>
        <activity android:name=".activity.TiaozhangActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.TimerActivity" />
        <activity android:name=".activity.PersonCreateActivity" />
        <activity android:name=".activity.GetDoneActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.RecordMoreActivity" />
        <activity android:name=".activity.ChooseIMGActivity" />
        <activity android:name=".activity.SettingActivity" />

        <service
            android:name=".services.RemindActionService"
            android:enabled="true"
            android:exported="true"
            android:process="system" />
    </application>

</manifest>